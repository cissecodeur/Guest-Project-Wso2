<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="userManagementSearchEP" xmlns="http://ws.apache.org/ns/synapse">
    <http method="post" uri-template="https://portail-auth.clients.smile.ci/scim2/Users/.search">
        <timeout>
            <duration>2000</duration>
            <responseAction>fault</responseAction>
        </timeout>
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
